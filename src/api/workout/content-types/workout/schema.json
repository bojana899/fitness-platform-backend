{
  "kind": "collectionType",
  "collectionName": "workouts",
  "info": {
    "singularName": "workout",
    "pluralName": "workouts",
    "displayName": "Workout"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "Title": {
      "type": "string",
      "required": true
    },
    "Description": {
      "type": "text",
      "required": true
    },
    "Difficulty": {
      "type": "enumeration",
      "required": true,
      "enum": [
        "Beginner, Intermediate, Advanced"
      ]
    },
    "Duration": {
      "type": "integer",
      "required": true,
      "min": 1,
      "max": 300
    },
    "Calories": {
      "type": "integer",
      "required": true,
      "max": 1000
    },
    "Category": {
      "type": "enumeration",
      "required": true,
      "enum": [
        "Strength, Cardio, Yoga, HIIT, Flexibility"
      ]
    },
    "Equipment": {
      "type": "json"
    },
    "muscleGroups": {
      "type": "json"
    },
    "Image": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "Rating": {
      "type": "integer",
      "max": 5
    },
    "Participants": {
      "type": "integer",
      "min": 0
    },
    "exercises": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::exercise.exercise"
    }
  }
}
