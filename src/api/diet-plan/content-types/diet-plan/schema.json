{
  "kind": "collectionType",
  "collectionName": "diet_plans",
  "info": {
    "singularName": "diet-plan",
    "pluralName": "diet-plans",
    "displayName": "Diet Plan"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text",
      "required": true
    },
    "sourceUrl": {
      "type": "string",
      "required": true
    },
    "dailyCalories": {
      "type": "integer",
      "min": 10,
      "max": 5000
    },
    "duration": {
      "type": "integer",
      "min": 1,
      "max": 365
    },
    "category": {
      "type": "enumeration",
      "required": true,
      "enum": [
        "breakfast",
        "lunch",
        "dinner",
        "desserts"
      ]
    },
    "image": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "rating": {
      "type": "decimal",
      "min": 0,
      "max": 5
    },
    "tags": {
      "type": "json"
    }
  }
}
